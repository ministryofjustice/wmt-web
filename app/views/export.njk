{% extends "includes/layout.njk" %}

{% block content %}

    
    {% include "includes/validation-error-messages.njk" %}

    {% include "includes/title-subtitle.njk" %}

    {% include "includes/sub-nav.njk" %}    

    <form method="post">

        {% include "includes/csrf-hidden-input.njk"%}
        <h2 class="govuk-heading-m">
                Select the data type to export (this will download as a .CSV file):
            </h2>
        <div class="govuk-grid-row">
            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <div class="govuk-grid-column-one-third">
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="radio-inline-1" type="radio" name="radioInlineGroup" value="1">
                            <label class="govuk-label govuk-radios__label" for="radio-inline-1">Case Details</label>
                        </div>
                    </div>
                    <div class="govuk-grid-column-one-third">
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="radio-inline-2" type="radio" name="radioInlineGroup" value="2">
                            <label class="govuk-label govuk-radios__label" for="radio-inline-2">Case Management Support</label>
                        </div>
                    </div>
                    <div class="govuk-grid-column-one-third">
                         <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="radio-inline-7" type="radio" name="radioInlineGroup" value="7">
                            <label class="govuk-label govuk-radios__label" for="radio-inline-7">Expiring Reductions</label>
                         </div>
                    </div>
                </fieldset>
            </div>
        </div>

        <div class="govuk-grid-row">
            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <div class="govuk-grid-column-one-third">
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="radio-inline-4" type="radio" name="radioInlineGroup" value="4">
                            <label class="govuk-label govuk-radios__label" for="radio-inline-4">Suspended Lifers</label>
                        </div>
                    </div>
                    <div class="govuk-grid-column-one-third">
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="radio-inline-5" type="radio" name="radioInlineGroup" value="5">
                            <label class="govuk-label govuk-radios__label" for="radio-inline-5">Percentage Capacity Breakdown</label>
                        </div>
                    </div>
                    <div class="govuk-grid-column-one-third">
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="radio-inline-6" type="radio" name="radioInlineGroup" value="6">
                            <label class="govuk-label govuk-radios__label" for="radio-inline-6">T2A</label>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>

        <div class="govuk-grid-row">
            <div class="govuk-form-group">
                {% if canExport %}
                    <input type="submit" class="govuk-button sln-export floatLeftBottom10 marginLeft10" value="Export" formaction="/probation/{{ organisationLevel }}/{{ linkId }}/export" data-module="govuk-button">
                {% endif %}
            </div>
        </div>
    </form>
{% include "includes/last-updated.njk" %}

{% endblock %}