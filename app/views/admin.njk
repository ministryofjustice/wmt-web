{% extends "includes/layout.njk" %}

{% block content %}
<main id="content" role="main">
  {% include "includes/breadcrumbs.njk" %}
   
  {% include "includes/title-subtitle.njk" %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
    {% if authorisation===false or userRole==='Super User'%}
      <h2 class="govuk-heading-m">
        <a class="blue-link govuk-link" href="/admin/workload-points">Workload points</a>
      </h2>
      <p class="govuk-body">Set workload points for standard cases</p>
      <h2 class="govuk-heading-m">
          <a class="blue-link govuk-link" href="/admin/workload-points/t2a">Workload points (T2A)</a>
      </h2>
      <p class="govuk-body">Set workload points for Transition to Adulthood cases</p>
      <h2 class="govuk-heading-m">
        <a class="blue-link govuk-link" href="/archive-options">Archive Data</a>
      </h2>
      <p class="govuk-body">View Archive Data</p>
    {% endif %}
    </div>
    <div class="govuk-grid-column-one-half">
      {% if authorisation===false or userRole==='System Admin' or userRole==='Super User'%}
      <h2 class="govuk-heading-m">
        <a class="blue-link govuk-link" href="/admin/user">User rights</a>
      </h2>
      <p class="govuk-body">Manage user rights</p>
      {% endif %}
      {% if authorisation===false or userRole==='Super User'%}
      <h2 class="govuk-heading-m">
        <a class="blue-link govuk-link" href="/manage-reduction-reasons">Manage Reduction Reasons</a>
      </h2>
      <p class="govuk-body">Add, Edit and Remove Reduction Reasons</p>
      {% endif %}
    </div>
  </div>

</main>
{% endblock %}