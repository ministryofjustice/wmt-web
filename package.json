{
  "name": "wmt-web",
  "version": "0.1.0",
  "description": "The frontend of the workload measurement tool",
  "engines": {
    "npm": "7"
  },
  "scripts": {
    "start": "gulp start",
    "build": "gulp generate-assets && gulp sync",
    "unit-test": "standard && mocha --recursive test/unit/ --exit",
    "integration-test": "gulp generate-assets && mocha --recursive test/integration --timeout=60000 --exit --reporter mocha-simple-html-reporter --reporter-options output=test_results/integration-test-reports.html",
    "test": "mocha --recursive test/unit/ --exit --reporter mocha-simple-html-reporter --reporter-options output=test_results/unit-test-reports.html",
    "test-e2e": "node ./test/helpers/data/setup-e2e-data-helper.js && gulp --gulpfile gulpfile-e2e.js",
    "test-e2e-firefox": "wdio test/wdio.conf.sauce.firefox.js",
    "test-e2e-firefox-jenkins": "wdio test/wdio.conf.sauce.firefox.jenkins.js",
    "accessibility-test": "mocha --recursive test/accessibility --timeout=100000 --exit --reporter mocha-simple-html-reporter --reporter-options output=test_results/accessibility-test-reports.html",
    "record-build-info": "node ./bin/record-build-info",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "lint": "standard",
    "accessibility-test-ci": "node ./test/accessibility/setup-pa11y-file.js && ./node_modules/.bin/pa11y-ci && node ./test/accessibility/delete-pally-data.js"
  },
  "standard": {
    "ignore": [
      "node_modules/*",
      "app/govuk_modules/*",
      "app/assets/javascripts/*.js",
      "app/public/javascripts/*.js"
    ],
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "afterEach",
      "after",
      "it",
      "xit",
      "browser",
      "$"
    ]
  },
  "devDependencies": {
    "@wdio/cli": "^7.7.4",
    "@wdio/local-runner": "^7.7.4",
    "@wdio/mocha-framework": "^7.7.4",
    "@wdio/sauce-service": "^7.7.4",
    "chai": "4.3.x",
    "cheerio": "^1.0.0-rc.10",
    "gulp-mocha": "8.0.x",
    "gulp-standard": "14.0.x",
    "gulp-webdriver": "^4.0.0",
    "mocha": "8.4.x",
    "mocha-simple-html-reporter": "^2.0.0",
    "nodemon": "^2.0.7",
    "pa11y-ci": "^2.4.2",
    "proxyquire": "2.1.x",
    "selenium-standalone": "6.23.0",
    "sinon": "^10.0.0",
    "standard": "^16.0.3",
    "supertest": "6.1.x",
    "webdriverio": "^7.7.4"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "body-parser": "1.19.x",
    "bunyan": "^1.8.15",
    "bunyan-prettystream": "^0.1.3",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^2.0.0-beta.2",
    "csurf": "^1.11.0",
    "datatables.net": "^1.10.25",
    "excel4node": "^1.7.2",
    "express": "4.17.x",
    "express-nunjucks": "2.2.x",
    "express-sanitized": "^0.5.1",
    "express-session": "^1.17.2",
    "floatthead": "^2.2.1",
    "govuk-frontend": "^3.13.0",
    "gulp": "^4.0.2",
    "gulp-nsp": "^3.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-uglify": "^3.0.2",
    "he": "^1.2.0",
    "helmet": "^4.6.0",
    "jquery": "^3.6.0",
    "json2csv": "5.0.6",
    "knex": "^0.95.6",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "mssql": "^7.1.3",
    "nunjucks": "3.2.x",
    "nunjucks-date-filter": "^0.1.1",
    "passport": "^0.4.1",
    "passport-saml": "^2.2.0",
    "sass": "^1.35.1",
    "tedious": "^11.0.9",
    "underscore": "^1.13.1",
    "util": "^0.12.4",
    "validator": "^13.6.0",
    "wmt-probation-rules": "github:ministryofjustice/wmt-probation-rules#v1.0.6"
  }
}
