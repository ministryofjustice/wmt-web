{
  "name": "wmt-web",
  "version": "0.1.0",
  "description": "The frontend of the workload measurement tool",
  "engines": {
    "npm": "7"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "node app/bin/www",
    "clean": "rm -rf app/public",
    "compile-sass": "sass --no-source-map --load-path=node_modules/govuk-frontend --load-path=node_modules/@ministryofjustice/frontend ./app/assets/sass/application.scss:./app/public/stylesheets/application.css ./app/assets/sass/select2.scss:./app/public/stylesheets/select2.css --style compressed",
    "copy-assets": "mkdir -p app/public/javascripts/vendor/ && cp node_modules/jquery/dist/jquery.min.js app/public/javascripts/vendor/ && cp node_modules/govuk-frontend/govuk/all.js app/public/javascripts/gov-uk.js && cp -a app/assets/javascripts/. app/public/javascripts/ && cp -r node_modules/govuk-frontend/govuk/assets/. app/public/ && cp -a app/assets/images/. app/public/images/",
    "build": "npm run compile-sass && npm run copy-assets",
    "integration-test": "npm run build && mocha --recursive test/integration --timeout=60000 --exit --reporter mocha-simple-html-reporter --reporter-options output=test_results/integration-test-reports.html",
    "test": "mocha --recursive test/unit/ --exit --reporter mocha-simple-html-reporter --reporter-options output=test_results/unit-test-reports.html",
    "test-e2e": "node ./test/helpers/data/setup-e2e-data-helper.js && wdio test/e2e.conf.js && node ./test/helpers/data/delete-e2e-data-helper.js",
    "record-build-info": "node ./bin/record-build-info",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "lint": "standard",
    "accessibility-test-ci": "node ./test/accessibility/setup-pa11y-file.js && ./node_modules/.bin/pa11y-ci && node ./test/accessibility/delete-pally-data.js",
    "seed-dev-data": "node ./test/helpers/data/setup-e2e-data-helper.js",
    "clean-dev-data": "node ./test/helpers/data/delete-e2e-data-helper.js"
  },
  "standard": {
    "ignore": [
      "node_modules/*",
      "app/govuk_modules/*",
      "app/assets/javascripts/*.js",
      "app/public/javascripts/*.js"
    ],
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "afterEach",
      "after",
      "it",
      "xit",
      "browser",
      "$"
    ]
  },
  "devDependencies": {
    "@rpii/wdio-report-events": "^0.1.4",
    "@wdio/cli": "^7.11.1",
    "@wdio/local-runner": "^7.11.1",
    "@wdio/mocha-framework": "^7.11.1",
    "@wdio/sauce-service": "^7.11.1",
    "@wdio/selenium-standalone-service": "^7.10.1",
    "@wdio/spec-reporter": "^7.10.1",
    "chai": "4.3.x",
    "cheerio": "^1.0.0-rc.10",
    "cookie-session": "^2.0.0-beta.2",
    "husky": "^7.0.2",
    "jsonwebtoken": "^8.5.1",
    "mocha": "9.1.x",
    "mocha-simple-html-reporter": "^2.0.0",
    "nodemon": "^2.0.12",
    "pa11y-ci": "^2.4.2",
    "proxyquire": "2.1.x",
    "sass": "^1.38.2",
    "selenium-standalone": "7.1.0",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "standard": "^16.0.3",
    "supertest": "6.1.x",
    "wdio-html-nice-reporter": "^7.8.2",
    "webdriverio": "^7.11.1"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.28.0",
    "applicationinsights": "^2.1.6",
    "bunyan": "^1.8.15",
    "bunyan-prettystream": "^0.1.3",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-redis": "^6.0.0",
    "csurf": "^1.11.0",
    "datatables.net": "^1.10.25",
    "excel4node": "^1.7.2",
    "express": "4.17.x",
    "express-nunjucks": "2.2.x",
    "express-request-id": "^1.4.1",
    "express-session": "^1.17.2",
    "floatthead": "^2.2.3",
    "govuk-frontend": "^3.13.1",
    "he": "^1.2.0",
    "helmet": "^4.6.0",
    "jquery": "^3.6.0",
    "json2csv": "5.0.6",
    "jwt-decode": "^3.1.2",
    "knex": "^0.95.10",
    "moment": "^2.29.1",
    "nunjucks": "3.2.x",
    "nunjucks-date-filter": "^0.1.1",
    "passport": "^0.4.1",
    "passport-oauth2": "^1.6.0",
    "pg": "^8.7.1",
    "redis": "^3.1.2",
    "superagent": "^6.1.0",
    "util": "^0.12.4",
    "validator": "^13.6.0"
  }
}
