{
  "name": "wmt-web",
  "version": "0.1.0",
  "description": "The frontend of the workload measurement tool",
  "scripts": {
    "start": "gulp",
    "build": "yarn install && gulp generate-assets && gulp sync",
    "unit-test": "standard && mocha --recursive test/unit/ --exit",
    "integration-test": "gulp assets && mocha --recursive test/integration --timeout=60000 --exit",
    "test": "yarn unit-test && yarn integration-test",
    "test-e2e": "gulp --gulpfile gulpfile-e2e.js",
    "test-e2e-firefox": "wdio test/wdio.conf.sauce.firefox.js",
    "test-e2e-firefox-jenkins": "wdio test/wdio.conf.sauce.firefox.jenkins.js",
    "accessibility-test": "mocha --recursive test/accessibility --timeout=100000 --exit"
  },
  "standard": {
    "ignore": [
      "node_modules/*",
      "app/govuk_modules/*",
      "app/assets/javascripts/*.js",
      "app/public/javascripts/*.js"
    ],
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "afterEach",
      "after",
      "it",
      "xit",
      "browser",
      "$"
    ]
  },
  "devDependencies": {
    "@wdio/cli": "^6.12.0",
    "@wdio/local-runner": "^6.12.0",
    "@wdio/mocha-framework": "^6.11.0",
    "@wdio/sauce-service": "^6.12.0",
    "chai": "4.2.x",
    "cheerio": "^1.0.0-rc.5",
    "gulp-mocha": "7.0.x",
    "gulp-standard": "14.0.x",
    "gulp-webdriver": "^4.0.0",
    "mocha": "8.2.x",
    "nodemon": "^2.0.7",
    "proxyquire": "2.1.x",
    "selenium-standalone": "6.23.0",
    "sinon": "^9.2.3",
    "standard": "^16.0.3",
    "supertest": "6.1.x",
    "webdriverio": "^6.12.0"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "body-parser": "1.19.x",
    "bunyan": "^1.8.15",
    "bunyan-prettystream": "^0.1.3",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^2.0.0-beta.2",
    "csurf": "^1.11.0",
    "datatables.net": "^1.10.23",
    "excel4node": "^1.7.2",
    "express": "4.17.x",
    "express-nunjucks": "2.2.x",
    "express-sanitized": "^0.5.1",
    "express-session": "^1.17.1",
    "floatthead": "^2.2.1",
    "govuk-elements-sass": "^3.1.3",
    "govuk-frontend": "^3.10.2",
    "govuk_frontend_toolkit": "9.0.x",
    "govuk_template_jinja": "0.26.x",
    "gulp": "^4.0.2",
    "gulp-nsp": "^3.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-uglify": "^3.0.2",
    "he": "^1.2.0",
    "helmet": "^4.4.0",
    "jquery": "^3.5.1",
    "json2csv": "5.0.5",
    "knex": "^0.21.16",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "mssql": "^6.3.1",
    "nunjucks": "3.2.x",
    "nunjucks-date-filter": "^0.1.1",
    "passport": "^0.4.1",
    "passport-saml": "^2.0.2",
    "sass": "^1.32.4",
    "serve-favicon": "2.5.x",
    "underscore": "^1.12.0",
    "util": "^0.12.3",
    "validator": "^13.5.2",
    "wmt-probation-rules": "ministryofjustice/wmt-probation-rules.git#v1.0.1"
  }
}
