{
  "name": "wmt-web",
  "version": "0.1.0",
  "description": "The frontend of the workload measurement tool",
  "engines": {
    "node": "^18",
    "npm": "^8"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "node app/bin/www",
    "clean": "rm -rf app/public",
    "compile-sass": "sass --quiet-deps --no-source-map --load-path=node_modules/govuk-frontend --load-path=node_modules/@ministryofjustice/frontend --load-path=. ./app/assets/sass/application.scss:./app/public/stylesheets/application.css ./app/assets/sass/select2.scss:./app/public/stylesheets/select2.css --style compressed",
    "copy-assets": "mkdir -p app/public/javascripts/vendor/ && cp node_modules/jquery/dist/jquery.min.js app/public/javascripts/vendor/ && cp node_modules/datatables.net/js/jquery.dataTables.min.js app/public/javascripts/vendor/ && cp node_modules/govuk-frontend/govuk/all.js app/public/javascripts/gov-uk.js && cp -a app/assets/javascripts/. app/public/javascripts/ && cp -r node_modules/govuk-frontend/govuk/assets/. app/public/ && cp -a app/assets/images/. app/public/images/",
    "build": "npm run compile-sass && npm run copy-assets",
    "integration-test": "npm run build && mocha --recursive test/integration --timeout=60000 --exit --reporter mocha-simple-html-reporter --reporter-options output=test_results/integration-test-reports.html",
    "test": "mocha --recursive test/unit/ --exit --reporter mocha-simple-html-reporter --reporter-options output=test_results/unit-test-reports.html",
    "test-e2e": "node ./test/helpers/data/setup-e2e-data-helper.js && wdio test/e2e.conf.js && node ./test/helpers/data/delete-e2e-data-helper.js",
    "record-build-info": "node ./bin/record-build-info",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "lint": "standard",
    "accessibility-test-ci": "node ./test/accessibility/setup-pa11y-file.js && ./node_modules/.bin/pa11y-ci && node ./test/accessibility/delete-pally-data.js",
    "seed-dev-data": "node ./test/helpers/data/setup-e2e-data-helper.js",
    "clean-dev-data": "node ./test/helpers/data/delete-e2e-data-helper.js",
    "compare-exports": "node ./exportCompare/compareExports.js"
  },
  "standard": {
    "ignore": [
      "node_modules/*",
      "app/govuk_modules/*",
      "app/assets/javascripts/*.js",
      "app/public/javascripts/*.js"
    ],
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "afterEach",
      "after",
      "it",
      "xit",
      "browser",
      "$"
    ]
  },
  "devDependencies": {
    "@rpii/wdio-report-events": "0.2.0",
    "@wdio/cli": "7.25.4",
    "@wdio/local-runner": "7.25.4",
    "@wdio/mocha-framework": "7.25.4",
    "@wdio/selenium-standalone-service": "7.25.4",
    "@wdio/spec-reporter": "7.25.4",
    "chai": "4.3.7",
    "cookie-session": "2.0.0",
    "csv-parser": "3.0.0",
    "husky": "8.0.2",
    "jsonwebtoken": "8.5.1",
    "mocha": "10.1.0",
    "mocha-simple-html-reporter": "2.0.0",
    "pa11y-ci": "3.0.1",
    "proxyquire": "2.1.3",
    "sass": "1.56.1",
    "selenium-standalone": "8.2.3",
    "sinon": "14.0.2",
    "sinon-chai": "3.7.0",
    "standard": "17.0.0",
    "supertest": "6.3.1",
    "wdio-html-nice-reporter": "8.0.6",
    "webdriverio": "7.25.4"
  },
  "dependencies": {
    "@ministryofjustice/frontend": "1.6.2",
    "@aws-sdk/client-s3": "3.208.0",
    "@aws-sdk/client-sqs": "3.208.0",
    "applicationinsights": "2.3.6",
    "bunyan": "1.8.15",
    "bunyan-prettystream": "0.1.3",
    "compression": "1.7.4",
    "connect-flash": "0.1.1",
    "connect-redis": "6.1.3",
    "csurf": "1.11.0",
    "datatables.net": "1.13.1",
    "excel4node": "1.8.0",
    "express": "4.18.2",
    "express-nunjucks": "2.2.5",
    "express-session": "1.17.3",
    "floatthead": "2.2.4",
    "govuk-frontend": "4.3.1",
    "he": "1.2.0",
    "helmet": "6.0.0",
    "jquery": "3.6.1",
    "json2csv": "5.0.7",
    "jwt-decode": "3.1.2",
    "knex": "1.0.7",
    "moment": "2.29.4",
    "nunjucks": "3.2.3",
    "nunjucks-date-filter": "0.1.1",
    "passport": "0.6.0",
    "passport-oauth2": "1.6.1",
    "pg": "8.8.0",
    "redis": "4.5.0",
    "superagent": "8.0.3",
    "util": "0.12.4",
    "uuid": "9.0.0",
    "validator": "13.7.0"
  }
}
